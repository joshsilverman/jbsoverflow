<!DOCTYPE html>
<html>
<head>
  <title>JBS Ideaoverflow</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag :defaults %>
  <%= include_tiny_mce_if_needed %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="header">
    <%= image_tag "logo.png" %>
    <%= link_to "IdeaOverflow | JBS", "/" %>
  </div>

  <% if notice or alert  %>
    <div class="modal rounded_border notices">
      <%= notice %><%= alert %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
